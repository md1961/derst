<div class="stats_show">
  <div class="row">
    <% [false, true].each do |high_stakes| -%>
      <% [1, 2, 3].each do |place| -%>
        <table>
          <caption>
            <%= "#{high_stakes ? "重賞 " : ""}#{{1 => "勝利数", 2 => "連対数", 3 => "複勝数"}[place]}" %>
          </caption>
          <tbody>
            <% Stats.each_most_number_of_equal_or_better_places_of(place, high_stakes: high_stakes) do |racer, number| -%>
              <tr>
                <td><%= racer %></td>
                <td class="numeric"><%= number %></td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      <% end -%>
    <% end -%>
  </div>

  <div class="row">
    <% [false, true].each do |high_stakes| -%>
      <% [1, 2, 3].each do |place| -%>
        <table>
          <caption>
            <%= "#{high_stakes ? "重賞 " : ""}#{{1 => "勝率", 2 => "連対率", 3 => "複勝率"}[place]}" %>
          </caption>
          <tbody>
            <% Stats.each_best_pct_of_equal_or_better_places_of(place, high_stakes: high_stakes) do |racer, num_places, num_races| -%>
              <tr>
                <td><%= racer %></td>
                <td class="numeric close_to_right"><%= sprintf("%5.3f", num_places.to_f / num_races) %></td>
                <td class="numeric"><%= sprintf("(%2d/%2d)", num_places, num_races) %></td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      <% end -%>
    <% end -%>
  </div>

  <% [false, true].each do |high_stakes| -%>
    <% [1, 2, 3].each do |place| -%>
      <div class="row">
        <table>
          <caption>
            <%= "#{high_stakes ? "重賞 " : ""}#{{1 => "連勝", 2 => "連続連対", 3 => "連続複勝"}[place]}" %>
          </caption>
          <tbody>
            <% Stats.each_result_in_row_of_equal_or_better_place_of(place, high_stakes: high_stakes) do |results| -%>
              <tr>
                <td class="numeric"><%= results.size %></td>
                <td><%= results.first.racer %></td>
                <td class="centered"><%= age_range_display(results) %></td>
                <td class="centered"><%= week_range_display(results) %></td>
                <td class="results"><%= races_display(results) %></td>
              </tr>
            <% end -%>
          </tbody>
        </table>
      </div>
    <% end -%>
  <% end -%>

  <div class="row">
    <table>
      <caption>最年長重賞勝利</caption>
      <tbody>
        <% Stats.each_oldest_high_stake_win do |result| -%>
          <tr>
            <td><%= result.racer %></td>
            <td><%= age_in_week_display(result.age_in_week) %></td>
            <td><%= race_name_display(result.race) %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>

    <table>
      <caption>最年少重賞勝利</caption>
      <tbody>
        <% Stats.each_youngest_high_stake_win do |result| -%>
          <tr>
            <td><%= result.racer %></td>
            <td><%= age_in_week_display(result.age_in_week) %></td>
            <td><%= race_name_display(result.race) %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
  </div>

  <div class="row">
    <% [false, true].each do |high_stakes| -%>
      <table>
        <caption>
          <%= "最高オッズ#{high_stakes ? "重賞 " : ""}勝利" %>
        </caption>
        <tbody>
          <% Stats.each_highest_odds_wins(high_stakes: high_stakes) do |result| -%>
            <tr>
              <td><%= result.racer %></td>
              <td><%= age_in_week_display(result.age_in_week) %></td>
              <td class="numeric"><%= result.odds %></td>
              <td><%= race_name_display(result.race) %></td>
            </tr>
          <% end -%>
        </tbody>
    <% end -%>
  </div>
</div>
