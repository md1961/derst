  <div class="form">
    <%= render 'form' %>

    <table class="racers table_base">
      <tbody>
        <% @racer.mother.racers.older_first.each do |racer| -%>
          <tr>
            <td><%= racer_name_display(racer) %></td>
            <%= racer_sex_display_in_td(racer) %>
            <td class="numeric"><%= "#{racer.age}æ­³" %></td>
            <td><%= "x #{racer.father}" %></td>
          </tr>
        <% end -%>
      </tbody>
    </table>
  </div>

  <div class="mating">
    <%= render partial: 'mating', locals: {mare: @racer.mother, sire: @racer.father} %>
  </div>
</div>
