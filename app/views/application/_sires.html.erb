<div id="sire_filter" hidden>
  <%= form_with model: @sire_filter, local: true do |f| %>
    <%= f.select :stability, options_for_abc %>
    <%= hidden_field_tag :mare_id, @mare&.id %>
    <%= f.submit %>
  <% end -%>
</div>
<span id="button_to_show_sire_filter" class="button">[+]</span>

<table class="table_base">
  <thead>
    <tr>
      <th>
      <th>
      <% sire_trait_names.each do |name| -%>
        <th><%= SireTrait.human_attribute_name(name) %></th>
      <% end -%>
      <% if @mare -%>
        <th>ニ</th>
        <th>面</th>
        <th>インブリード</th>
      <% end -%>
    </tr>
  </thead>
  <tbody>
    <% mare_inbreeds = @mare&.h_inbreeds -%>
    <% @sires.each.with_index(1) do |sire, seq_num| -%>
      <% has_all_fathers = @entering_bloodline && sire.all_bloodline_father_present? -%>
      <tr>
        <td class="numeric">
          <%= link_to seq_num, sire, tabindex: has_all_fathers ? -1 : 0 %>
        </td>
        <td style="<%= !@entering_bloodline || has_all_fathers ? '' : 'color: red' %>">
          <%= sire.name %>
        </td>
        <% trait = sire.trait -%>
        <% sire_trait_names.each do |name| -%>
          <td class="<%= name == :fee ? 'numeric' : 'centered' %>">
            <%= trait.send(name) %>
          </td>
        <% end -%>

        <% if @mare -%>
          <% mating = Mating.new(sire, @mare, mare_inbreeds) -%>
          <td class="centered"><%= mating.nicks?       ? '〇' : '' %></td>
          <td class="centered"><%= mating.interesting? ? '〇' : '' %></td>
          <td><%= inbreed_display(mating) %></td>
        <% end -%>
      </tr>
    <% end -%>
  </tbody>
</table>
